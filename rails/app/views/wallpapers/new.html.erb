<% if @wallpaper.errors.any? %>
  <div id="form-register-alert" class="alert alert-warning">
    <ul>
    <% @wallpaper.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="row">
  <h2 class="col-sm-offset-4 col-sm-4">Upload Wallpaper</h2>
</div>
<%= form_for @wallpaper, method: :post, html: { multipart: true, id: 'form-wallpaper-upload', class: 'form-horizontal', role: 'form'} do %>
  <div class="form-group">
    <%= label_tag :title, 'Title', class: 'col-sm-4 control-label' %>
    <div class="col-sm-4">
      <%= text_field_tag :title, params[:title], class: 'form-control', placeholder: 'Title' %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :category_id, 'Category', class: 'col-sm-4 control-label' %>
    <div class="col-sm-4">
      <%= select_tag :category_id, options_from_collection_for_select(Category.all(), "id", "name", params[:category_id]), class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :wallpaper, 'Wallpaper', class: 'col-sm-4 control-label' %>
    <div class="col-sm-4">
      <%= file_field_tag :wallpaper %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-4">
      <%= submit_tag 'Upload', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>